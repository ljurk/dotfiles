separator_block_width=14

[record]
command=cat /tmp/recordingicon
interval=once
color=#ff0000
signal=3

[arch-update]
command=~/.config/i3blocks/scripts/arch-update 
interval=3600
markup=pango
LABEL=

[temperature]
command=~/.config/i3blocks/scripts/temperature
label=
interval=10
T_WARN=70
T_CRIT=90

[timer]
label=
command=~/.config/i3blocks/scripts/timerBlock ~/.config/i3blocks/scripts/.timerfile
interval=1
markup=pango

[memory]
label=
command=~/.config/i3blocks/scripts/memory
separator=false
interval=30

[disk-root]
label=
command=~/.config/i3blocks/scripts/disk
interval=30
color=#1793D1

[iface]
command=~/.config/i3blocks/scripts/i3ip
color=#00FF00
interval=10

[strength]
command=echo "$(iw dev wlo1 link | grep signal | cut -d " " -f 2-)"
interval=10
color=#cb4b16

[cpu]
label=CPU
command=/usr/lib/i3blocks/cpu_usage
interval=10
min_width=CPU: 100.00%
separator=false

[volume]
label=
